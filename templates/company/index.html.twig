{% extends 'admin.html.twig' %}

{% block title %}Companies list{% endblock %}
{% block actions %}
  <a href="{{ path('companies_create') }}" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create</a>
{% endblock %}

{% block content %}
  <table id="company_list" class="table table-striped table-sm">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Tax No</th>
      <th>Address</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for company in companies %}
      <tr>
        <td><a href="{{ path('companies_view', {id: company.id }) }}">{{ company.id }}</a></td>
        <td>{{ company.name}}</td>
        <td>{{ company.taxNumber }}</td>
        <td>
          {{ company.address.street }}<br/>
          {{ company.address.city }}
          {{ company.address.zip }}<br/>
          {{ company.address.country }}<br/>
          {{ company.address.phoneNumber }}<br/>
        </td>
        <td>{{ company.createdAt|date }}</td>
        <td>
          <a href="{{ path('companies_view', {id: company.id }) }}" class="btn btn-primary"><i class="bi bi-binoculars-fill"></i> View</a>
          <a href="{{ path('companies_edit', {id: company.id }) }}" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
