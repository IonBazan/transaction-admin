<div class="row">
    <div class="col-sm-2 font-weight-bold">ID</div>
    <div class="col-sm-10">{{ transaction.id }}</div>
</div>
<div class="row">
    <div class="col-sm-2 font-weight-bold">Company</div>
    <div class="col-sm-10"><a href="{{ path('companies_view', {id: transaction.company.id}) }}">{{ transaction.company }}</a></div>
</div>
<div class="row">
    <div class="col-sm-2 font-weight-bold">Amount</div>
    <div class="col-sm-10">{{ transaction.amount }}</div>
</div>
<div class="row">
    <div class="col-sm-2 font-weight-bold">Status</div>
    <div class="col-sm-10">{{ transaction.status }}</div>
</div>
<div class="row">
    <div class="col-sm-2 font-weight-bold">Created At</div>
    <div class="col-sm-10">{{ transaction.createdAt|date }}</div>
</div>
