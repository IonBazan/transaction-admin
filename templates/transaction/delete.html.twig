{% extends 'admin.html.twig' %}

{% block title %}Deleting transaction: {{ transaction.id }}{% endblock %}

{% block content %}
    {% include 'transaction/_details.html.twig' %}
    <form action="{{ url('transactions_delete', { id: transaction.id }) }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('delete-transaction') }}"/>
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a href="{{ path('transactions_list') }}" class="btn btn-warning"><i class="bi bi-arrow-left-square-fill"></i> Cancel</a>
    </form>
{% endblock %}
